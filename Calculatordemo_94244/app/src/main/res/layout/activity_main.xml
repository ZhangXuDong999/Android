<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <Button
                style="@style/btn1"
                android:text="MC"
                />
            <Button
                style="@style/btn1"
                android:text="MR"
                />
            <Button
                style="@style/btn1"
                android:text="MS"
                />
            <Button
                style="@style/btn1"
                android:text="M+"
                />
            <Button
                style="@style/btn1"
                android:text="M-"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <Button
                style="@style/btn1"
                android:text="⬅"
                />
            <Button
                style="@style/btn1"
                android:text="CE"
                />
            <Button
                style="@style/btn1"
                android:text="C"
                />
            <Button
                style="@style/btn1"
                android:text="±"
                />
            <Button
                style="@style/btn1"
                android:text="√"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <Button
                style="@style/btn1"
                android:text="7"
                />
            <Button
                style="@style/btn1"
                android:text="8"
                />
            <Button
                style="@style/btn1"
                android:text="9"
                />
            <Button
                style="@style/btn1"
                android:text="/"
                />
            <Button
                style="@style/btn1"
                android:text="%"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <Button
                style="@style/btn1"
                android:text="4"
                />
            <Button
                style="@style/btn1"
                android:text="5"
                />
            <Button
                style="@style/btn1"
                android:text="6"
                />
            <Button
                style="@style/btn1"
                android:text="*"
                />
            <Button
                style="@style/btn1"
                android:text="1/x"
                />
        </TableRow>


    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="fill_horizontal"
        >

        <Button
            android:id="@+id/btn1"
            style="@style/btn1"
            android:text="1"
            />
        <Button
            android:id="@+id/btn2"
            style="@style/btn1"
            android:layout_toRightOf="@id/btn1"
            android:text="2"
            android:layout_alignTop="@id/btn1"
            />
        <Button
            android:id="@+id/btn3"
            style="@style/btn1"
            android:layout_toRightOf="@id/btn2"
            android:text="3"
            android:layout_alignTop="@id/btn1"
            />
        <Button
            android:id="@+id/btn-"
            style="@style/btn1"
            android:layout_toRightOf="@id/btn3"
            android:text="-"
            android:layout_alignTop="@id/btn1"
            />
        <Button
            android:id="@+id/btnE"
            android:layout_toRightOf="@id/btn-"
            style="@style/btn2"
            android:text="="
            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_toLeftOf="@id/btnE"
            style="@style/btn1"
            android:text="+"
            android:layout_alignBottom="@id/btnE"
            />
        <Button
            android:id="@+id/btnPoint"
            android:layout_toLeftOf="@id/btnAdd"
            style="@style/btn1"
            android:text="."
            android:layout_alignBottom="@id/btnE"
            />
        <Button
            android:layout_toLeftOf="@id/btnPoint"
            style="@style/btn3"
            android:text="0"
            android:layout_alignBottom="@id/btnE"
            />

    </RelativeLayout>

</LinearLayout>